import logging
import sys

from singularity.application import SingularityApplication

logger = None 

def main():
    global logger
    try:
        app = SingularityApplication()
        logger = logging.getLogger(__name__)
        app.run()
    except:
        if logger:
            logger.exception(error, exc_info = True)
            sys.exit(1)
        raise

if __name__ == "__main__":
    main()

